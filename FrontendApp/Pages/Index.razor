@page "/"

<PageTitle>Welcome to SocialHub</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center text-center">
        <div class="col-md-8">
            <h1 class="display-4 mb-4">Welcome to SocialHub</h1>
            <p class="lead mb-4">
                Connect with friends, share your moments, and join our growing community.
            </p>
            <div class="card shadow-sm p-4">
                <h2 class="h4 mb-3">Get Started</h2>
                <p>
                    To access all features of our platform, please sign in or create a new account.
                </p>
                <hr class="my-4" />
                <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                    <a href="/login" class="btn btn-primary btn-lg px-4">
                        Sign In
                    </a>
                    <a href="/register" class="btn btn-outline-primary btn-lg px-4">
                        Create Account
                    </a>
                </div>
            </div>

            <div class="mt-5">
                <h3 class="h4 mb-4">Why Join Us?</h3>
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-body">
                                <i class="bi bi-people-fill fs-3 mb-3 text-primary"></i>
                                <h4 class="h5">Connect</h4>
                                <p class="card-text">Stay in touch with friends and make new connections</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-body">
                                <i class="bi bi-share-fill fs-3 mb-3 text-primary"></i>
                                <h4 class="h5">Share</h4>
                                <p class="card-text">Share your moments and experiences with others</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card h-100 border-0 shadow-sm">
                            <div class="card-body">
                                <i class="bi bi-chat-fill fs-3 mb-3 text-primary"></i>
                                <h4 class="h5">Engage</h4>
                                <p class="card-text">Engage in discussions and build meaningful relationships</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>